<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.thinking.org.system.menu.Menu">

	<resultMap type="cn.thinking.org.system.menu.Menu" id="menuResultMap">
		<id column="menu_id" property="menuId"/>
		<result column="menu_name" property="menuName"/>
		<result column="menu_url" property="menuUrl"/>
		<result column="parent_id" property="parentId"/>
		<result column="menu_remark" property="menuRemark"/>
	</resultMap>

	<select id="listAllParentMenu" resultMap="menuResultMap">
		select * from tb_menu where parent_id is null
	</select>
	<select id="listSubMenuByParentId" parameterType="int" resultMap="menuResultMap">
		select * from tb_menu where parent_id=#{parentId}
	</select>
	<select id="getMenuById" parameterType="int" resultMap="menuResultMap">
		select * from tb_menu where menu_id=#{menuId}
	</select>
	<select id="listAllSubMenu" resultMap="menuResultMap">
		select * from tb_menu where parent_id is not null
	</select>
	
	<insert id="insertMenu" parameterType="cn.thinking.org.system.menu.Menu"  useGeneratedKeys="true" keyProperty="menuId">
		insert into tb_menu (menu_name,menu_url,parent_id,menu_remark) values (#{menuName},#{menuUrl},#{parentId},#{menuRemark})
	</insert>
	
	<update id="updateMenu" parameterType="cn.thinking.org.system.menu.Menu">
		update tb_menu set 
		menu_name=#{menuName},
		menu_url=#{menuUrl},
		parent_id=#{parentId} ,
		menu_remark=#{menuRemark}
		where menu_id=#{menuId}
	</update>
	
	<delete id="deleteMenuById" parameterType="int">
		delete from tb_menu where menu_id=#{menuId} or parent_id=#{menuId}
	</delete>
</mapper>